<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Buck's Coffee Shop</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md bg-success">
            <div class="container-fluid">
                <a class="navbar-brand fw-bolder" href="#">
                    <img width="50" height="50"
                         src="/images/bucks-fat-logo.png"
                         alt="Buck's Coffee Shop Logo"
                         class="d-md-none" />
                    <span class="d-sm-none">Buck's Mountain Coffee</span>
                </a>
                <button class="offcanvas-toggler d-md-none d-lg-none bg-success" type="button" data-bs-toggle="offcanvas" data-bs-target="#bucks-offcanvas" aria-controls="offcanvasResponsive">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Menu</a>
                        </li>
                        <a class="navbar-brand d-none d-md-block" href="#">
                            <img width="100" height="100"
                                 src="/images/bucks-fat-logo.png"
                                 alt="Buck's Coffee Shop Logo" />
                        </a>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="fluid-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-success-subtle">
        <div class="container">
            <div class="row py-5">
                <div class="col-12 col-md-6 col-lg-3 mb-5">
                    <h5>
                        <img width="50" height="50"
                             src="/images/bucks-fat-logo.png"
                             alt="Buck's Coffee Shop Logo" />
                        Buck's Mountain Coffee
                    </h5>
                    <p>We provide the best coffee for every mood.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-success-subtle"><span class="fa fa-fw fa-phone"></span> (999) 894-9000</li>
                        <li class="list-group-item bg-success-subtle"><span class="fa fa-fw fa-location-pin"></span> Nowhere</li>
                        <li class="list-group-item bg-success-subtle"><span class="fa fa-fw fa-envelope"></span> my@email.com</li>
                    </ul>
                </div>
                <div class="col-12 col-md-6 col-lg-3 mb-5">
                    <h5>Quick Links</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-success-subtle">Home</li>
                        <li class="list-group-item bg-success-subtle">Menu</li>
                        <li class="list-group-item bg-success-subtle">Products</li>
                        <li class="list-group-item bg-success-subtle">Contact</li>
                    </ul>
                </div>
                <div class="col-12 col-md-6 col-lg-3 mb-5">
                    <h5>Open Hours</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-success-subtle">Sun: Closed</li>
                        <li class="list-group-item bg-success-subtle">Mon: 9am-6pm</li>
                        <li class="list-group-item bg-success-subtle">Tue: 9am-6pm</li>
                        <li class="list-group-item bg-success-subtle">Wed: 9am-6pm</li>
                        <li class="list-group-item bg-success-subtle">Thu: 9am-6pm</li>
                        <li class="list-group-item bg-success-subtle">Fri: 9am-6pm</li>
                        <li class="list-group-item bg-success-subtle">Sat: 9am-6pm</li>
                    </ul>

                </div>
                <div class="col-12 col-md-6 col-lg-3 mb-5">
                    <h5>Chat with us</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-success-subtle"><span class="fa-brands fa-fw fa-square-facebook"></span> Facebook</li>
                        <li class="list-group-item bg-success-subtle"><span class="fa-brands fa-fw fa-square-twitter"></span> Twitter</li>
                        <li class="list-group-item bg-success-subtle"><span class="fa-brands fa-fw fa-linkedin"></span> LinkedIn</li>
                        <li class="list-group-item bg-success-subtle"><span class="fa-brands fa-fw fa-square-instagram"></span> Instagram</li>
                    </ul>
                </div>
            </div>
        </div>
        <hr />
        <div class="container bg-success-subtle">
            &copy; 2023 - Buck's Coffee Shop - <a asp-page="Privacy" title="Go to Privacy page">Privacy</a>
        </div>
    </footer>

    <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="bucks-offcanvas" aria-labelledby="bucks-offcanvas-label">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasScrollingLabel">
                <img width="100" height="100"
                     src="/images/bucks-fat-logo.png"
                     alt="Buck's Coffee Shop Logo" />
                     Buck's Mountain Coffee
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action border-0 border-start border-5 border-success" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Home</h5>
                        <small>&raquo;</small>
                    </div>
                </a>
                <a href="#" class="list-group-item list-group-item-action border-0 border-start border-5 border-warning">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Menu</h5>
                        <small class="text-body-secondary">&raquo;</small>
                    </div>
                </a>
                <a href="#" class="list-group-item list-group-item-action border-0 border-start border-5 border-danger">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Products</h5>
                        <small class="text-body-secondary">&raquo;</small>
                    </div>
                </a>
                <a href="#" class="list-group-item list-group-item-action border-0 border-start border-5 border-info">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Contact</h5>
                        <small class="text-body-secondary">&raquo;</small>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
